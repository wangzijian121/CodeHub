<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="Person" class="com.zjyun.spring.基于XML的Spring.beans.Person" scope="singleton" lazy-init="true"
          init-method="init" destroy-method="destory">
        <property name="name" value="wang"></property>
    </bean>

    <bean id="MyServiceImpl" class="com.zjyun.spring.基于XML的Spring.impl.MyServiceImpl" scope="singleton" lazy-init="true"
          init-method="init" destroy-method="destory">
        <property name="Person"  ref="Person"></property>
    </bean>
</beans>